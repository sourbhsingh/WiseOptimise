<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#EBFFD7" /> <!-- Change color to red (hex code: #FF0000) -->
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="ring">
                <solid android:color="#47FF4F" /> <!-- Change color to white (hex code: #FFFFFF) -->
                <size
                    android:width="4dp"
                    android:height="4dp" />
                <stroke
                    android:color="#000000"
                    android:width="1dp"
                    />
                <!-- Adjust the size of the ring -->
            </shape>
        </rotate>
    </item>
</layer-list>