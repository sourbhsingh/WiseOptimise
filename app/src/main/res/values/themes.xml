<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WiseOptimise" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#F44336</item>
        <item name="colorAccent">#F44336</item>

           </style>

    <style name="ScreenBackground"><item name="android:background">@color/white  </item>  </style>
    <style name="Line"><item name="android:background">#262135</item>  </style>
    <style name="TextColor"><item name="android:textColor">#000000</item>  </style>
    <style name="back_button_settings"><item name="android:backgroundTint">#ffffff</item>  </style>
    <style name="settings_linear_bg"><item name="android:background">@drawable/round_back_white  </item>  </style>



    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#E2E2E2</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Theme.WiseOptimise.NavigationViewStyle" parent="Widget.Design.NavigationView">
