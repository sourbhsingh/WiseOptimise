<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/holo_orange_light"
    android:id="@+id/mytoolBar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >



    <ImageView
        android:id="@+id/menubar"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/apkName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/apkName"
        app:layout_constraintVertical_bias="0.48"
        app:srcCompat="@drawable/baseline_menu_24" />

    <ImageView
        android:id="@+id/menubadfr"
        android:layout_width="40dp"
        android:layout_height="30dp"

        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/apkName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toEndOf="@+id/apkName"
        app:layout_constraintTop_toTopOf="@+id/apkName"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_settings_24" />

    <TextView
        android:id="@+id/apkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="212dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Wise Optimise"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/menubar" />
</android.support.constraint.ConstraintLayout>